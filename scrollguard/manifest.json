{
  "manifest_version": 2,
  "name": "Scroll Guard",
  "version": "1.0",
  "description":
    "Combat the addictive effects of infinite scrolling sites, like Facebook",
  "icons": {
    "16": "static/icon16.png",
    "48": "static/icon48.png",
    "128": "static/icon128.png"
  },
  "permissions": ["webNavigation", "tabs", "storage", "<all_urls>"],
  "background": {
    "scripts": ["js/main.js"],
    "persistent": false
  },
  "options_page": "static/options.html"
}
